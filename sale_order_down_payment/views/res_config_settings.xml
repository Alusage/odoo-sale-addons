<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="res_config_settings_view_form" model="ir.ui.view">
    <field name="name">res.config.settings form down payment amount</field>
    <field name="model">res.config.settings</field>
    <field name="priority">50</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[@id='down_payments']" position="inside">
        <div class="o_setting_left_pane mt16">
          <field name="default_display_dpa_text" />
        </div>
        <div class="o_setting_right_pane mt16">
          <label for="default_display_dpa_text" />
        </div>
      </xpath>
    </field>
  </record>

</odoo>